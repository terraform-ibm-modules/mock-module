{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>terraform-ibm-modules/common-dev-assets:commonRenovateConfig"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Golang base image in private Artifactory Dockerfile",
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "FROM docker-na-private\\.artifactory\\.swg-devops\\.com/wcp-goldeneye-team-docker-virtual/library/golang:(?<currentValue>\\d+\\.\\d+)"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
